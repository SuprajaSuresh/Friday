<h1>Listing users</h1>
<table>
  <tr>
    <th>Username</th>
    <th>Email</th> 
    <th>Posts</th>
    <th> </th>
    <th> </th>
  </tr>
  <% @users.each do |user| %>

    <tr>

      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.posts.count %></td>
      <td><%= link_to 'Show', user %></td>
      <td>
          <% unless current_user.friends.include?(user) %> 
            <%= link_to 'Add as Friend', friendships_path(:friend_id => user), :method => :post %>   
          <% end %>
      </td>  
    </tr>
  <% end %>
</table>